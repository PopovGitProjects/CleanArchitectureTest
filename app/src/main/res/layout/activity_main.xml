<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Save user data"
        app:layout_constraintEnd_toEndOf="@+id/edtSave"
        app:layout_constraintStart_toStartOf="@+id/edtSave"
        app:layout_constraintTop_toBottomOf="@+id/edtSave" />

    <TextView
        android:id="@+id/tvGet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="No data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Put data here"
        app:layout_constraintEnd_toEndOf="@+id/btnGet"
        app:layout_constraintStart_toStartOf="@+id/btnGet"
        app:layout_constraintTop_toBottomOf="@+id/btnGet"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnGet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Get user data"
        app:layout_constraintEnd_toEndOf="@+id/tvGet"
        app:layout_constraintStart_toStartOf="@+id/tvGet"
        app:layout_constraintTop_toBottomOf="@+id/tvGet" />

</androidx.constraintlayout.widget.ConstraintLayout>